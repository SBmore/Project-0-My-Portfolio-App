<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity"
    android:id="@+id/app"
    android:background="#B2DFDB">

    <TextView android:text="@string/title"
        android:textSize="34sp"
        android:typeface="normal"
        android:id="@+id/title"
        android:textColor="@color/material_blue_grey_800"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1.5"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:gravity="center_vertical|center_horizontal" />

    <Button
        android:text="@string/btn1Spotify"
        android:id="@+id/spotifyButton"
        android:background="#FFECB3"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp" />


    <Button
        android:text="@string/btn2Scores"
        android:id="@+id/scoresButton"
        android:background="#FFECB3"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp" />

    <Button
        android:text="@string/btn3Library"
        android:id="@+id/libraryButton"
        android:background="#FFECB3"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp" />

    <Button
        android:text="@string/btn4BuildIt"
        android:id="@+id/buildItBiggerButton"
        android:background="#FFECB3"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp" />

    <Button
        android:text="@string/btn5XYZ"
        android:id="@+id/xyzReaderButton"
        android:background="#FFECB3"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:text="@string/btn6Capstone"
        android:id="@+id/capstoneButton"
        android:onClick="sendMessage"
        android:background="#FFE082"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.5"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

</LinearLayout>
